@model Prato

<h2 class="h4 fw-bold mb-4">Confirmar Eliminação</h2>

<div class="alert alert-danger">
    Tem certeza que deseja eliminar o prato <strong>@Model.Nome</strong>?
</div>

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Sim, Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
