@model Prato

<h2 class="h4 fw-bold mb-4">Editar Prato</h2>

<form asp-action="Editar" method="post" class="bg-white p-4 rounded shadow-sm border" style="max-width: 500px;">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Nome" class="form-label">Nome do Prato</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Preco" class="form-label">Preço do Prato</label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Dia" class="form-label">Dia</label>
        <input asp-for="Dia" type="date" class="form-control" />
        <span asp-validation-for="Dia" class="text-danger small"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
</form>
