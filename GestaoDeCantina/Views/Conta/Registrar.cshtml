@{
    ViewData["Title"] = "Registrar";
}

<div class="container mt-5">
    <h2 class="mb-4">Registrar Usuário</h2>

    <form method="post" asp-controller="Conta" asp-action="Registrar" class="needs-validation" novalidate>
        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input type="text" name="nome" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" name="email" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Senha</label>
            <input type="password" name="senha" class="form-control" required />
        </div>
        <div class="mb-3">
            <label class="form-label">Confirmar Senha</label>
            <input type="password" name="confirmarSenha" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-primary">Registrar</button>
    </form>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p class="mb-0">@error.ErrorMessage</p>
            }
        </div>
    }

    <p class="mt-3">
        Já tem uma conta? <a href="@Url.Action("Login", "Conta")">Faça login aqui</a>.
    </p>
</div>
