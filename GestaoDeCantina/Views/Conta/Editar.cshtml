@model Usuario
@{
    ViewData["Title"] = "Editar Utilizador";
}
<div class="container mt-4">
    <h2 class="fw-bold mb-4">@ViewData["Title"]</h2>

    <form asp-action="Editar" method="post" class="row g-3">
        <input type="hidden" asp-for="Id" />
        <div class="col-md-6">
            <label asp-for="Nome" class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="col-md-6">
            <label asp-for="Role" class="form-label">Perfil</label>
            <select asp-for="Role" class="form-select">
                <option value="User">User</option>
                <option value="Admin">Admin</option>
            </select>
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-save"></i> Atualizar
            </button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
