@model IEnumerable<Senha>

<h2 class="text-2xl font-bold mb-4">Minhas Senhas</h2>

<!-- ✅ Botões de Exportação -->
<div class="flex space-x-4 mb-4">
    <a href="/Exportacao/Excel" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">Exportar Excel</a>
    <a href="/Exportacao/Pdf" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700">Exportar PDF</a>
</div>

@if (!Model.Any())
{
    <p class="text-gray-600">Você ainda não escolheu nenhuma senha.</p>
}
else
{
    <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
        <thead class="bg-gray-100">
            <tr>
                <th class="text-left px-6 py-3">Prato</th>
                <th class="text-left px-6 py-3">Data Escolha</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var senha in Model)
            {
                <tr class="border-b hover:bg-gray-50">
                    <td class="px-6 py-4">@senha.Prato?.Nome</td>
                    <td class="px-6 py-4">@senha.DataEscolha.ToString("dd/MM/yyyy HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
