@model GestaoDeCantina.ViewModels.RegisterViewModel

<h2 class="text-2xl font-bold mb-4">Registrar</h2>

<form asp-action="Register" method="post" class="space-y-4 max-w-md">
    <div>
        <label asp-for="Email"></label>
        <input asp-for="Email" class="w-full border px-3 py-2 rounded" />
        <span asp-validation-for="Email" class="text-red-600"></span>
    </div>
    <div>
        <label asp-for="Senha"></label>
        <input asp-for="Senha" type="password" class="w-full border px-3 py-2 rounded" />
        <span asp-validation-for="Senha" class="text-red-600"></span>
    </div>
    <div>
        <label asp-for="ConfirmarSenha"></label>
        <input asp-for="ConfirmarSenha" type="password" class="w-full border px-3 py-2 rounded" />
        <span asp-validation-for="ConfirmarSenha" class="text-red-600"></span>
    </div>
    <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded">Registrar</button>
</form>
